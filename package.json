{
  "name": "simple-upload",
  "version": "1.0.0",
  "description": "a simple-upload",
  "main": "index.js",
  "author": "Skywalker512",
  "license": "MIT",
  "private": true,
  "config": {},
  "scripts": {
    "lint-js": "eslint src/**/*.js",
    "lint-js-fix": "eslint src/**/*.js --fix",
    "lint-scss": "stylelint src/**/*.scss",
    "lint-scss-fix": "stylelint src/**/*.scss --fix",
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "clean": "rm -rf dist && mkdir -p dist/{images,styles,scripts}",
    "shell": "scripty",
    "shell:images": "scripty",
    "shell:scripts": "scripty",
    "shell:styles": "scripty",
    "shell:hash": "scripty",
    "pretest": "npm run lint-js && npm run lint-scss",
    "test": "mocha tests/index.spec.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "cssmin": "^0.4.3",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "hashmark": "^5.0.0",
    "husky": "^1.3.1",
    "imagemin-cli": "^4.0.0",
    "imagemin-pngquant": "^7.0.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "replaceinfiles": "^1.1.4",
    "scripty": "^1.9.1",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4",
    "uglify-es": "^3.3.9"
  }
}
